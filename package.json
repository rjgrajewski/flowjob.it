{
  "name": "flowjob",
  "private": true,
  "workspaces": [
    "frontend-react"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"python3 -m uvicorn backend.main:app --reload --port 8000\" \"npm run dev --workspace=flowjob-frontend\"",
    "dev:frontend": "npm run dev --workspace=flowjob-frontend",
    "dev:backend": "python3 -m uvicorn backend.main:app --reload --port 8000",
    "build": "npm run build --workspace=flowjob-frontend"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}