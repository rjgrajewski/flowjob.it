# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/aligno_db

# Option 2: Use individual database settings (if DATABASE_URL is not provided)
DB_USER=aligno
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aligno_db


# Scraper Configuration
BATCH_SIZE=10
SCROLL_PAUSE=0.512
MAX_IDLE=5
SCRAPER_TIMEOUT=30000

# Debug Configuration (Optional)
# Limit number of offers to scrape for debugging (None = no limit)
MAX_OFFERS=100
HEADLESS=false
