{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "framework": "vite",
    "buildCommand": "npm run build --prefix frontend-react",
    "installCommand": "npm install && npm install --prefix frontend-react",
    "outputDirectory": "frontend-react/dist"
}